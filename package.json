{
	"name": "@ruan-cat/drill-doc",
	"description": "阮喵喵维护的钻头文档，用docx直接生成的md文档。",
	"version": "3.7.2",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.29.2",
	"engines": {
		"node": ">=22.14.0"
	},
	"scripts": {
		"git:fetch": "git fetch -p",
		"git:dev-2-main": "git rebase dev main && git push --follow-tags",
		"git:main-2-dev": "git rebase main dev",
		"up-taze": "pnpm up @ruan-cat/taze-config -L && npx taze -r",
		"decompress-porn-img-package": "pnpm exec decompress-porn-img-package 'D:/store/baidu/048.蠢沫沫/'",
		"docs:dev": "vitepress dev docs --port 8080 --open",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"docs:build-vp": "vuepress-vite build docs",
		"docs:dev-vp": "vuepress-vite dev docs --clean-cache --open",
		"docs:update-package": "pnpm dlx vp-update",
		"postinstall": "npx nuxi prepare",
		"prepare": "simple-git-hooks",
		"init-biome-config": "biome init",
		"biome-migrate-prettier": "biome migrate prettier --write",
		"format": "prettier --experimental-cli --write '**/*.{js,jsx,ts,tsx,mts,json,css,scss,md,yml,yaml,html}'",
		"format:docs-biome": "biome format --write ./docs/**/*.md",
		"format:docs-prettier": "prettier --experimental-cli --write ./docs/**/*.md",
		"rm:node_modules": "rimraf node_modules pnpm-lock.yaml .nuxt .vercel",
		"deploy-vercel": "tsx ./scripts/vercel-deploy-tool.ts",
		"build:drill-docx2md": "tsx ./scripts/docx2md/index.ts",
		"build:doc-in-vercel": "tsx ./scripts/build-doc-in-vercel/index.ts",
		"predocs:build": "pnpm run build:doc-in-vercel"
	},
	"dependencies": {
		"@ruan-cat/decompress-porn-img-package": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@prettier/plugin-oxc": "^0.1.3",
		"@ruan-cat/commitlint-config": "^4.9.1",
		"@ruan-cat/domains": "^1.7.0",
		"@ruan-cat/taze-config": "^1.0.2",
		"@ruan-cat/utils": "^4.20.0",
		"@ruan-cat/vercel-deploy-tool": "^1.2.3",
		"@ruan-cat/vitepress-preset-config": "^2.14.0",
		"@types/degit": "^2.8.6",
		"@types/lodash-es": "^4.17.12",
		"commitizen": "^4.3.1",
		"commitlint": "^20.4.2",
		"consola": "^3.4.2",
		"cz-git": "^1.12.0",
		"degit": "^2.8.4",
		"glob": "^11.1.0",
		"gradient-string": "^3.0.0",
		"html-to-md": "^0.8.8",
		"lint-staged": "^16.2.7",
		"lodash-es": "^4.17.23",
		"mammoth": "^1.11.0",
		"mermaid": "^10.9.5",
		"nuxt": "^3.21.1",
		"prettier": "^3.8.1",
		"prettier-plugin-lint-md": "^1.0.1",
		"sharp": "^0.33.5",
		"simple-git-hooks": "^2.13.1",
		"taze": "^19.9.2",
		"tsx": "^4.21.0",
		"vite": "^6.3.5",
		"vitepress": "^1.6.4",
		"vitepress-demo-plugin": "^1.5.1",
		"vue": "^3.5.28"
	},
	"author": {
		"name": "ruan-cat",
		"email": "1219043956@qq.com",
		"url": "https://github.com/ruan-cat"
	},
	"license": "MIT"
}
