{
	"name": "@ruan-cat/drill-doc",
	"description": "阮喵喵维护的钻头文档。",
	"private": true,
	"version": "0.0.1",
	"author": {
		"name": "ruan-cat"
	},
	"license": "MIT",
	"type": "module",
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=22.14.0"
	},
	"scripts": {
		"git:fetch": "git fetch -p",
		"git:dev-2-main": "git rebase dev main && git push --follow-tags",
		"git:main-2-dev": "git rebase main dev",
		"docs:dev": "vitepress dev docs --port 8080 --open",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"docs:build-vp": "vuepress-vite build docs",
		"docs:dev-vp": "vuepress-vite dev docs --clean-cache --open",
		"docs:update-package": "pnpm dlx vp-update",
		"up-ruan-cat": "pnpm -F=* up @ruan-cat/*@latest",
		"postinstall": "npx nuxi prepare",
		"init-biome-config": "biome init",
		"biome-migrate-prettier": "biome migrate prettier --write",
		"format:docs-biome": "biome format --write ./docs/**/*.md",
		"format:docs-prettier": "prettier --experimental-cli --write ./docs/**/*.md",
		"rm:node_modules": "rimraf node_modules pnpm-lock.yaml .nuxt .vercel",
		"deploy-vercel": "node --import=tsx ./scripts/vercel-deploy-tool.ts",
		"build:drill-docx2md": "node --import=tsx ./scripts/docx2md/index.ts",
		"build:doc-in-vercel": "node --import=tsx ./scripts/build-doc-in-vercel/index.ts",
		"predocs:build": "pnpm run build:doc-in-vercel"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@prettier/plugin-oxc": "^0.0.4",
		"@ruan-cat/commitlint-config": "^1.3.0",
		"@ruan-cat/domains": "^0.4.1",
		"@ruan-cat/utils": "^4.8.0",
		"@ruan-cat/vercel-deploy-tool": "^0.8.18",
		"@ruan-cat/vitepress-preset-config": "^0.10.0",
		"@types/degit": "^2.8.6",
		"@types/lodash-es": "^4.17.12",
		"commitizen": "^4.3.1",
		"consola": "^3.4.2",
		"cz-git": "^1.11.2",
		"degit": "^2.8.4",
		"glob": "^11.0.3",
		"gradient-string": "^3.0.0",
		"html-to-md": "^0.8.8",
		"lodash-es": "^4.17.21",
		"mammoth": "^1.9.1",
		"mermaid": "^10.9.3",
		"nuxt": "^3.17.5",
		"prettier": "^3.6.2",
		"prettier-plugin-lint-md": "^1.0.1",
		"sharp": "^0.33.5",
		"tsx": "^4.20.3",
		"vite": "^6.3.5",
		"vitepress": "^1.6.3",
		"vitepress-demo-plugin": "^1.4.5",
		"vue": "^3.5.17"
	}
}